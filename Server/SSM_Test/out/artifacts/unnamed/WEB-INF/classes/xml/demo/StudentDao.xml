    <resultMap id="studentResultMap" type="entity.demo.Student">
        <id property="id" column="id"></id>
        <result property="name" column="name"></result>
        <result property="gender" column="gender"/>
        <result property="age" column="age"/>
    </resultMap>
</mapper>